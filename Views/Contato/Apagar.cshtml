@{
    ViewData["Title"] = "Apagar contato";
}

<div>
    <div class="text-center">
        <h1 class="display-4">Apagar contato</h1>
    </div>
    <form>
        <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input type="email" class="form-control" id="nome" aria-describedby="emailHelp" disabled>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="password" class="form-control" id="email" disabled>
        </div>
        <div class="mb-3">
            <label class="form-label" for="celular">Celular</label>
            <input type="text" class="form-control" id="celular" disabled>
        </div>
        <button type="submit" class="btn btn-primary w-100">Apagar contato</button>
        <a class="btn btn-secondary w-100 mt-1" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
    </form>
</div>